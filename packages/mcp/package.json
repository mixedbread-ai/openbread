  "dependencies": {
    "@mixedbread/sdk": "^0.16.0",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "mime-types": "^3.0.1",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "@types/jest": "^29.5.14",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.0.3",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
