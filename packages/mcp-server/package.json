{
  "name": "@mixedbread/mcp",
  "version": "0.9.3",
  "description": "The official MCP Server for the Mixedbread API",
  "author": "Mixedbread <support@mixedbread.com>",
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mixedbread-ai/mixedbread-ts.git",
    "directory": "packages/mcp-server"
  },
  "homepage": "https://github.com/mixedbread-ai/mixedbread-ts/tree/main/packages/mcp-server#readme",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "test": "jest",
    "build": "bash ./build",
    "prepack": "echo 'to pack, run pnpm build && (cd dist; pnpm pack)' && exit 1",
    "prepublishOnly": "echo 'to publish, run pnpm build && (cd dist; pnpm publish)' && exit 1",
    "tsn": "ts-node -r tsconfig-paths/register",
    "lint": "biome lint --write .",
    "format": "biome format --write .",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@cloudflare/cabidela": "^0.2.3",
    "@mixedbread/sdk": "^0.9.2",
    "@modelcontextprotocol/sdk": "^1.11.5",
    "yargs": "^17.7.2",
    "zod": "^3.25.20",
    "zod-to-json-schema": "^3.24.5"
  },
  "bin": {
    "mcp-server": "dist/index.js"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "@types/jest": "^29.4.0",
    "@types/yargs": "^17.0.33",
    "jest": "^29.4.0",
    "ts-jest": "^29.1.0",
    "ts-morph": "^19.0.0",
    "ts-node": "^10.5.0",
    "tsc-multi": "https://github.com/stainless-api/tsc-multi/releases/download/v1.1.8/tsc-multi.tgz",
    "tsconfig-paths": "^4.0.0",
    "typescript": "5.8.3"
  },
  "imports": {
    "@mixedbread/mcp": ".",
    "@mixedbread/mcp/*": "./src/*"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./*.mjs": "./dist/*.mjs",
    "./*.js": "./dist/*.js",
    "./*": {
      "require": "./dist/*.js",
      "default": "./dist/*.mjs"
    }
  }
}
